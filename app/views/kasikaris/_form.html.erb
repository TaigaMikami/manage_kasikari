<%= form_for(@kasikari) do |f| %>

  <%= render 'shared/error_messages', object: @kasikari %>

  <%= f.label :item_id %>
  <%= f.text_field :item_id, class: 'form-control' %>

  <%= f.label :from_user_id %>
  <%= f.text_field :from_user_id, class: 'form-control' %>

  <%= f.label :to_user_id %>
  <%= f.text_field :to_user_id, class: 'form-control' %>

  <%= f.label :start_date %>
  <%= f.date_select :start_date, {}, class: 'form-control' %>

  <%= f.label :end_date %>
  <%= f.date_select :end_date, {}, class: 'form-control' %>

  <%= f.label :done_flag %>
  <%= f.check_box :done_flag %>

  <%= f.submit "登録", class: "btn btn-primary" %>
<% end %>
