<% provide(:title, @user.name) %>
<div class="row">
    <div class="set_position">
      <section class="user_me">
        <section class="user_info">
          <h6>
            <p><%= gravatar_for @user %></p>
            <%= @user.name %>
            <%= render 'follow_form' if logged_in? %>
          </h6>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
        <%= link_to "アイテムを登録する", new_item_path, class: "btn btn-lg btn-primary" %>
      </section>

      <section class="timeline">
        <h6>タイムライン</h6>
        <div id="timeline-list">
          <ul>
            <%= render @timeline_kasikaris %>
          </ul>
      </div>
      </section>
    </div>
</div>
