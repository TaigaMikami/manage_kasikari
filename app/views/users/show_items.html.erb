<% provide(:title, "#{@user.name}のアイテム一覧") %>
<!-- <h3><%= @user.name%>のアイテム一覧</h3> -->

<div class="row">
  <div class="set_position_items">
    <section class="user_me user_me_items">
      <section class="user_info user_info_items">
        <%= thumbnail_for @user %>
        <br><br>
        <h6><%= @user.name %></h6>
        <span><%= link_to "view my profile", @user %></span>
        <span><b>Items:</b> <%= @user.items.count %></span>
      </section>
        <%= render 'shared/stats' %>
        <br><br><br>
        <%= render 'sidebar' %>
    </section>
    <section class="items_list">
      <h6>アイテム </h6>

      <ul class="user_items">
        <% @items.each do |item| %>
        <div class="items_list_person">
          <li>
            <%= link_to item.name, item ,class: "items_name" %>
            <%= thumbnail_for item, size: 150 %>
            <br>
            <% if current_user?(@user) %>
              <% if item.available %>
                <div class="btn btn-sm btn-primary">貸出可</div>
              <% else %>
                <div class="btn btn-sm btn-primary">貸出中</div>
              <% end %>
            <% else %>
              <%= link_to "借りたい", new_kari_path(item), class: "btn btn-lg btn-primary" %>
            <% end %>
          </li>
        </div>
        <% end %>
      </ul>

  </div>
</div>
