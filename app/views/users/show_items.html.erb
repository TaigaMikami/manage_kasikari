<% provide(:title, "#{@user.name}のアイテム一覧") %>
<!-- <h3><%= @user.name%>のアイテム一覧</h3> -->

<div class="row">
  <div class="set_position_items">
    <section class="user_me user_me_items">
      <section class="user_info user_info_items">
        <%= thumbnail_for @user %>
        <br><br>
        <h6><%= @user.name %></h6>
        <span><%= link_to "view my profile", @user %></span>
        <span><b>Items:</b> <%= @user.items.count %></span>
      </section>
        <%= render 'shared/stats' %>
        <br><br><br>
        <%= link_to "アイテムを登録する", new_item_path, class: "btn btn-lg btn-primary" %>
    </section>
    <section class="items_list">
      <h6>アイテム</h6>

      <ul class="user_items">
        <% @items.each do |item| %>
        <div class="items_list_person">
          <li>
            <%= link_to item.name, item ,class: "items_name" %>
            <%= thumbnail_for item, size: 150 %>
            <br>
            <%= link_to "借りたい", "#", class: "btn btn-lg btn-primary" %>
          </li>
        </div>
        <% end %>
      </ul>

  </div>
</div>
