<% provide(:title, "#{@user.name}の貸し借り一覧") %>

<div class="row">
  <div class="set_position_kasikaris">
    <section class="user_me">
      <section class="user_info">
        <h6>
          <%= thumbnail_for @user %>
          <br><br>
          <%= @user.name %>
          <%= render 'users/follow_form' if logged_in? %>
        </h6>
      </section>
      <%= render 'shared/stats' %>
      <br><br>
      <%= render 'users/sidebar' %>
    </section>

    <!-- <section class="timeline"> -->
    <section class="kasikari-list">
      <h6>貸し借り</h6>
      <div class="kasikari">
        <ul class="nav nav-tabs">
          <li class="active"><a data-toggle="tab" href="#kasi">貸し</a></li>
          <li><a data-toggle="tab" href="#kari">借り</a></li>
        </ul>

        <div id="tab-content">
          <div id="kasi" class="tab-pane fade in active">
            <%= render @kasis %>
          </div>
          <div id="kari" class="tab-pane fade">
            <%= render @karis %>
          </div>
        </div>
      </div>

    </section>
  </div>
</div>
