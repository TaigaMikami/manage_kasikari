<% provide(:title, @item.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= thumbnail_for @item, size: 100 %>
        <%= @item.name %>
        <% if logged_in? && current_user.id === @item.user_id %>
          | <%= link_to "編集", edit_item_path(@item) %>
          | <%= link_to "削除", @item, method: :delete, data: { confirm: "You sure?" } %>
        <% end %>
      </h1>
    </section>
    <%= link_to user_path(current_user) do %>
      <h2> 一覧へ </h2>
    <% end %>
  </aside>
</div>
